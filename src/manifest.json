{
  "manifest_version": 3,
  "name": "LatexEverywhere",
  "version": "0.0.0",
  "description": "A chrome extension to write latex on sites that don't support it.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "options_page": "options/options.html"
}
