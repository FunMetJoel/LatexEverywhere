{
  "manifest_version": 3,
  "name": "LatexEverywhere",
  "version": "1.0.1",
  "description": "A chrome extension to write latex on sites that don't support it.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/katex.min.js","content.js"],
      "css": ["katex.min.css"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "options_page": "options/options.html"
}
